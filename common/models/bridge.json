{
  "name": "Bridge",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "bridgeSecret": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "sensors": {
      "type": "hasMany",
      "model": "Sensor"
    },
    "building": {
      "type": "belongsTo",
      "model": "Building"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "buildingOwner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
